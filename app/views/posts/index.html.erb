<div class="title">
  <h2> Timeline </h2>

<%= render 'form' %>

  <% @posts.each do |post| %>
    <div class="form-group row">
      <div class="col">
      <span class="border border-primary">
      <%= link_to post.user.name, user_path(post.user) unless post.user.blank? %>
        <%= post.content %>
        </span>
      </div>
    </div>
    <% end %>

</div>

